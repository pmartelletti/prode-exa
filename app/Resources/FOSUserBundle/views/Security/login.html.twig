{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
{% if error %}
    <div class="alert alert-error"><i class="icon-bell"></i> {{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}  

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
    <h3>Iniciar sesi√≥n</h3>
    <hr>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    


    <input type="text" id="username" class="input-block-level" name="_username" value="{{ last_username }}" required="required" placeholder="Usuario" />

    <input type="password" id="password" class="input-block-level" name="_password" required="required" placeholder="Password" />

    <label for="remember_me" class="checkbox" >
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
    </label>

    <input class="btn btn-info" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
</form>
{% endblock fos_user_content %}

{% block stylesheets_code %}
    {{ parent() }}
    .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 20px auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }
{% endblock %}